# Django settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=1

# OpenRouteService API key
# Get a free key at https://openrouteservice.org/dev/#/signup
ROUTING_API_KEY=your-openrouteservice-api-key-here

# Absolute path to the fuel prices CSV file
FUEL_PRICE_FILE=/absolute/path/to/server/data/fuel-prices-for-be-assessment.csv

# Absolute path to the US cities geocoding CSV (used to resolve city/state -> lat/lng)
# Already included in the repo at server/data/us_cities.csv
US_CITIES_FILE=/absolute/path/to/server/data/us_cities.csv

# Vehicle settings (optional - these are the defaults)
VEHICLE_RANGE_MILES=500
VEHICLE_MPG=10
